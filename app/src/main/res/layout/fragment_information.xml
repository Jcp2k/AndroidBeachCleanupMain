<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal"
        android:alpha="0.7" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleaner Coastlines"
                android:textSize="70sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="20dp" />

            <!-- Subtitle or Introduction -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join our mission to keep Wellington's beaches clean and beautiful!"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingBottom="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beach cleanups are organized events where volunteers come together to collect trash and debris from our shorelines. These efforts help protect marine wildlife, reduce pollution, and maintain the natural beauty of our coastlines."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to get involved:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Sign up for upcoming cleanups at your nearest beach."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Bring your own gloves, bags, and sun protection."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Spread the word and encourage friends and family to join."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingBottom="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together, we can make a difference and ensure that future generations enjoy clean, healthy coastlines!"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingBottom="20dp"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
